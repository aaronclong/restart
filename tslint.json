{
 "rules": {
    "no-duplicate-variable": true,
    "no-trailing-whitespace": true,
    "member-access": true,
    "no-empty": true,
    "eofline": true,
    "class-name": true,
    "no-var-keyword": true,
    "triple-equals": true,
    "max-line-length": [true, 120],
    "indent": [true, "tabs"],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-snake-case"
    ],
    "no-unused-variable": [
      true
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-operator",
      "check-typecast",
      "check-preblock",
      "check-typecast",
      "check-separator",
      "check-module",
      "check-decl"
    ]
  },
  "rulesDirectory": [
    "node_modules/tslint-eslint-rules/dist/rules"
  ]
}
